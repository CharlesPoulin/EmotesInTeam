@inherits EmotesForTeam.Components.CardGridBase

@if (cards == null)
{
    <p>Loading...</p>
}
else
{
    <div class="grid grid-cols-6 gap-4">
        @foreach (var card in cards)
        {
            <div class="border border-gray-200 p-4 text-center">
                <img src="@card.ImageUrl" alt="@card.Title" class="mx-auto" />
                <p class="mt-2 center">@card.Title</p>
            </div>
        }
    </div>
}

@code {
    [Parameter]
    public int CurrentPage { get; set; }

    [Parameter]
    public EventCallback<int> OnPageChanged { get; set; }
}
