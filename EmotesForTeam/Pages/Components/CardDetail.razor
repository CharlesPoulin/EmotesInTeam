@page "/cardDetail/{CardId}"
@using EmotesForTeam.Model
@inherits CardGridBase

@if (cardViewModel != null)
{
    <span class="text-cyan-700 text-xl font-bold" style="font-family: 'Google Sans', sans-serif;">added by: @cardViewModel.Card.Owner</span>

    <div class="flex justify-end">
            <div class="flex flex-col items-end">
        <div class="w-[569px] h-[554px] bg-white rounded-[50px] flex flex-col items-center shadow-xl">
                <div class="w-[350px] mt-4 text-center pb-8"></div>
            <div class="w-[362px] h-[454px] flex flex-col items-center">
                <img class="w-[362px] h-[362px] rounded-[25px] object-cover" src="@cardViewModel.Card.ImageUrl" alt="@cardViewModel.Card.Title"/>
                <span class="text-black text-xl font-normal bottom-0" style="font-family: 'Google Sans', sans-serif;">@cardViewModel.Card.Title</span>
                <div class="w-[120px] h-0.5 mt-2 bg-zinc-100 rounded-[1px]"></div>
            </div>
        </div>
        <button class="w-[569px] h-10 mt-4 bg-blue-600 rounded-[6.7px] font-bold text-white hover:bg-blue-700 active:scale-90 transition duration-150 ease-in-out transform justify-center items-center"> Quick Add</button>
            </div>
    </div>


}
else
{
    <p>Loading...</p>
} 

@code {
    [Parameter]
    public string CardId { get; set; }

    private CardViewModel cardViewModel;

    protected override async Task OnInitializedAsync()
    {
        var card = await CardService.GetCardById(CardId); // This returns a Card object
        if(card != null)
        {
            // Convert or map Card to CardViewModel
            cardViewModel = new CardViewModel
            {
                Card = card, // Assign the card to the ViewModel
            };
        }
    }
}